<div class="pagination-container">
        <ul class="pagination">
                <% for( let index=0; index < pages; index++ ) { %>
                        <li class="page-item">
                                <a class="page-link <%= currentPage === (index + 1)  ? 'active' : "" %>"
                                        href="/<%= slug %>/?p=<%= index + 1 %>">
                                                        <%= index + 1 %>
                                </a>
                        </li>
                        <% } %>
        </ul>
</div>