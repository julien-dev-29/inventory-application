<%- include('../partials/head.ejs') %>

    <body>
        <h1>
            <a href="/">
                <%= appTitle %>
            </a>
        </h1>
        <ul>
            <li><a href="/">Accueil</a></li>
            <li><a href="/projects/create">Ajouter un projet</a></li>
        </ul>
        <hr>
        <h2>
            <%= title %>
        </h2>
        <table border="1">
            <thead>
                <th>#</th>
                <th>Nom</th>
                <th>Actions</th>
            </thead>
            <tbody>
                <% projects.forEach(project=> { %>
                    <tr>
                        <th>
                            <%= project.id %>
                        </th>
                        <td>
                            <%= project.name %>
                        </td>
                        <td><a href="/projects/<%= project.id %>">Details</a></td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <div class="pagination-container">
            <% for( let index=0; index < pages; index++ ) { %>
                <a class="pagination-link" href="/projects?p=<%= index + 1 %>">
                    <%= index + 1 %>
                </a>
                <% } %>
        </div>
    </body>

    </html>