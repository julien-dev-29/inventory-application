<%- include('../partials/head.ejs') %>

    <%- include('../partials/header.ejs') %>
        <hr>
        <form action="/projects/<%= project.id %>/edit" method="POST" enctype="application/x-www-form-urlencoded">
            <input type="hidden" name="_method" value="PUT">
            <label for="name">Nom du projet :</label>
            <input type="text" id="name" name="name" value="<%= project.name %>" required>
            <label for="description">Description :</label>
            <textarea id="description" name="description" required><%= project.description %></textarea>
            <label for="github_repo">Github repo :</label>
            <input id="github_repo" name="github_repo" value="<%= project.github_repo %>" required />
            <div>
                <button class="btn-edit" type="submit">Sauvegarder les modifications</button>
                <a class="btn-delete" href="/projects/<%= project.id %>">Annuler</a>
            </div>
        </form>
        </body>

        </html>