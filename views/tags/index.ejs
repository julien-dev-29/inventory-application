<%- include('../partials/head.ejs') %>

    <body>
        <h1>
            <a href="/">
                <%= appTitle %>
            </a>
        </h1>
        <ul>
            <li><a href="/">Accueil</a></li>
            <li><a href="/tags/create">Ajouter un tag</a></li>
        </ul>
        <hr>
        <table border="1">
            <h2>
                <%= title %>
            </h2>
            <thead>
                <th>#</th>
                <th>Nom</th>
                <th>Actions</th>
            </thead>
            <tbody>
                <% tags.forEach(tag=> { %>
                    <tr>
                        <th>
                            <%= tag.id %>
                        </th>
                        <td>
                            <%= tag.name %>
                        </td>
                        <td><a href="/tags/<%= tag.id %>">Details</a></td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <% for( let index=0; index < pages; index++ ) { %>
            <a href="/tags?p=<%= index + 1 %>">
                <%= index + 1 %>
            </a>
            <% } %>
    </body>

    </html>