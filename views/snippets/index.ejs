<%- include('../partials/head.ejs') %>

    <%- include('../partials/header.ejs') %>
        <hr>
        <h2>
            <%= title %>
        </h2>
        <table border="">
            <thead>
                <th>#</th>
                <th>Nom</th>
                <th>Username</th>
            </thead>
            <tbody>
                <% if (snippets) { %>
                    <% snippets.forEach(snippet=> { %>
                        <tr>
                            <th>
                                <%= snippet.id %>
                            </th>
                            <td>
                                <%= snippet.title %>
                            </td>
                            <td><a href="/snippets/<%= snippet.id %>">Details</a></td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <p>
                                    Pas de snippets!
                                </p>
                                <% } %>
            </tbody>
        </table>
        <%- include('../partials/pagination.ejs') %>
            </body>

            </html>